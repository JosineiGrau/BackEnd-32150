<html lang="en">
	<head>
		<%- include("partials/head.ejs", {tituloWeb: "getProducts"}) %>
	</head>
	<body>
		<header><%- include("partials/header.ejs") %></header>
		<main>
			<section class="main-table">
				<%if (allProducts.length === 0) { %>
					<h1>No hay productos</h1>
				<% } %>
				<%if (allProducts.length > 0) { %>
					<table>
						<thead>
							<tr>
								<th>Id</th>
								<th>Name</th>
								<th>Price</th>
								<th>Image</th>
							</tr>
						</thead>
						<tbody>
							<% allProducts.forEach(data => { %>
							<tr>
								<th><%= data.id%></th>
								<td><%= data.name%></td>
								<td>$<%= data.price%></td>
								<td>
									<img src=<%= data.image%> alt="hola" width="100px"/>
								</td>
							</tr>
							<% }) %>
						</tbody>
					</table>
				<% } %>	
			</section>
		</main>
	</body>
	<footer><%- include("partials/footer.ejs") %></footer>
</html>